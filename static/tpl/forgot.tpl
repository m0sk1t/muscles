<article class="ya-dialoges ya-container ya-relative">
	<div class="ya-narrower">
		<div class="ya-row">
			<div class="grid-1-1">
				<div class="ya-sign-form">
					<h2 class="ya-sign-form__title ya-center">Введите ваш почтовый адрес</h2>
					<form ng-submit="forgot()" class="ya-form ya-form_wide ya-sign-form__form">
						<div class="ya-form__input ya-input ya-input_inline">
							<div class="ya-clearfix">
								<div class="ya-input__field-wrapper ya-sign-form__field ya-center">
									<input id="ya-mail" class="ya-input__field" placeholder="Почта" type="text" ng-model="cred.mail" />
								</div>
							</div>
						</div>
						<div class="ya-form__input ya-input ya-input_inline">
							<div class="ya-clearfix ya-center">
								<button class="ya-btn ya-btn_secondary ya-btn_inline ya-sign-form__submit" type="submit">Сменить пароль</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</article>
