.ya-photos
    &__title
        font-size: 14px
        color: black
        padding: 20px 0 15px 35px
        line-height: 1
        position: relative
        &:before
            content: ""
            display: block
            width: 12px
            position: absolute
            left: 15px
            height: 9px
            top: 23px
            background: url(images/sprite.png) -268px -123px no-repeat
        &_video:before
            height: 12px
            background: url(images/sprite.png) -268px -161px no-repeat
            top: 21px
    &__link
        text-decoration: none
        color: black
    &__img-title
        position: absolute
        left: 0
        bottom: 0
        background: mainLinksColor
        color: white
        text-decoration: none
        diaplay: block
        text-align: center
        width: 100%
        padding: 5px 0
    &__item
        height: 102px
        overflow: hidden
        position: relative
        &:hover
            box-shadow: 1px 2px 2px rgba(0,0,0,0.5)
        &_large
            height: 145px
            margin-bottom: 25px
    &__img
        cursor: pointer
        background-position: 50% 50%
        background-size: cover
        background-repeat: no-repeat
        height: 100%
        display: block
    &__wrapper
        height: 100%
        &:hover
            & ^[0]__actions
                opacity: 1
    &__list
        padding: 0 15px 20px 15px
        &_empty
            color: mainLinksColor
            font-size: 13px
    &__actions
        position: absolute
        top: 5px
        right: 5px
        opacity: 0
    &__action-btn
        color: white
        font-size: 14px !important
        cursor: pointer
        opacity: .6
        &:hover
            opacity: 1