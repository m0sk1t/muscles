.ya-photos
    &__title
        font-size: 14px
        color: black
        padding: 20px 0 15px 35px
        line-height: 1
        position: relative
        &:before
            content: ""
            display: block
            width: 12px
            position: absolute
            left: 15px
            height: 9px
            top: 23px
            background: url(images/sprite.png) -268px -123px no-repeat
    &__link
        text-decoration: none
        color: black
    &__item
        height: 102px
        overflow: hidden
        &:hover
            box-shadow: 1px 2px 2px rgba(0,0,0,0.5)
        &_large
            height: 145px
            margin-bottom: 25px
    &__img
        cursor: pointer
        background-position: 50% 50%
        background-size: cover
        background-repeat: no-repeat
        height: 100%
    &__wrapper
        height: 100%
    &__list
        padding: 0 15px 20px 15px
        &_empty
            color: mainLinksColor
            font-size: 13px