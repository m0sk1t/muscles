.ya-slide
    position: absolute
    top: 0
    left: 0
    width: 1260px
    height: 600px
    opacity: 0;
    z-index: 0;
    animation: slider 18s linear infinite 0s;
    &_2
        animation-delay: 6s;
    &_3
        animation-delay: 12s;
.ya-main-slider
    height: 600px
    margin-top: -25px
    background: black

@keyframes slider {
    0% { opacity: 0; animation-timing-function: ease-in; }
    16% { opacity: 1; animation-timing-function: ease-out; }
    33% { opacity: 1 }
    49% { opacity: 0 }
    100% { opacity: 0 }
}