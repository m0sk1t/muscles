.ya-multiselect
    &__wrapper
        position: absolute
        top: 25px
        left: 0
        width: 100%
        max-height: 210px
        overflow: hidden
        z-index: 10000
    &__input:focus
        & + ^[0]__wrapper
            display: block
            z-index: 10000
            box-shadow: 0 0 3px rgba(0,0,0,.4)
    &__scroller
        background: white
    &__item
        padding: 5px 10px
        font-size: 14px
        border-bottom: 1px solid #eeeeee
        cursor: pointer
        &:hover
            background: #eeeeee
    &__subitem
        font-size: 12px
        color: #666666