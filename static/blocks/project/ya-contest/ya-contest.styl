.ya-contest
    &__info
        vertical-align: middle
        position: absolute
        top: 12px
        line-height: 20px
        right: 20px
        color: white
        font-size: 12px
        display: inline-block
        &:before
            content: ""
            display: inline-block
            width: 20px
            height: 20px
            position: relative
            top: -2px
            left: 0
            background: url(images/sprite.png) -146px -228px no-repeat
            line-height: 20px
            margin-right: 10px
            vertical-align: middle