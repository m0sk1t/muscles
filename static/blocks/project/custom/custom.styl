.ya-overlay
    z-index: 1000
    background: rgba(0,0,0,.7)
    margin-top: 118px
.ya-main-page__title
    padding-bottom: 0
    font-family: 'Crick', Tahoma, Arial, Helvetica, sans-serif
    font-weight: normal
.ya-main-page__subtitle
    color: #f3f600
    text-align: center
    display: block
    font-size: 30px
.ya-copyright
    font-size: 11px
    padding-left: 30px
.ya-date-info
    margin-bottom: 5px
    font-size: 11px
.ya-photos__item.ya-grid-1-4
    +below(959px)
        col(1/4)
.ya-photos__item.ya-grid-1-3
    +below(959px)
        col(1/3)
.ya-new-post__form
    .ya-avatar
        display: none
.ya-photos-page
.ya-videos-page
    .ya-pop-up_small
        .ya-btn_secondary
            +below(959px)
                display: none
.ya-fast-links
    .ya-span-1-3
        +below(479px)
            stack()
.ya-form__input
.ya-articles__filter
    .ya-right
        text-align: left
.ya-search-result__list.ya-users
    .ya-avatar
        +below(959px)
            text-align: center
            margin-bottom: 10px
.ya-bottom-line
    .ya-span-1-3
        overflow: hidden
        .ya-fast-link
            display:block
            width: 100%
            height: 100%
            position: relative
            overflow: hidden
            &:after
                content: ""
                background: #ef9300
                width: 200%
                height: 400%
                transform: rotate(-35deg) translate(20%, 20%)
                display: block
                left: 0
                top: 0
                opacity: 1
                transition: all 0.2s ease-out
                position: absolute
            &:hover
                &:after
                    opacity: .5
                    transform: rotate(0deg) translate(-50%, -50%)
