.ya-avatar
    &_small
        width: 40px
        height: 40px
        border: 1px solid #223d58
        overflow: hidden
        & ^[0]__img
            width: 100%
            height: auto
    &_auto
        width: 100%
        height: 79px
        border: 1px solid #223d58
        overflow: hidden
        & ^[0]__img
            width: 100%
            height: auto
    &_search
        width: 100%
        height: 100px
        margin-top: 15px
        //border: 1px solid #223d58
        overflow: hidden
        & ^[0]__img
            width: 100%
            height: auto
    &_large
        text-align: center
        overflow: hidden
        & ^[0]__img
            width: 100%
            height: auto