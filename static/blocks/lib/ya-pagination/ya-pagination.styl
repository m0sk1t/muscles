.ya-pagination
    &__item
        list-style-type: none
        float: left
        margin: 0 3px
        font-size: 16px
        &_hidden
            margin-right: 0
            margin-left: 0
            display: none
    &__link
        color: #223d58
        text-decoration: none
        font-weight: bold
        line-height: 20px
        cursor: pointer
        &_active
        &:hover
            color: #f49401
        &_active
            cursor: default
        &_box
            display: block
            width: 30px
            text-align: center
            border-radius: 3px
            background: #223d58
            height: 20px
            line-height: 20px
            color: white
            font-size: 14px
        &_next
            margin-left: 25px
        &_prev
            margin-right: 25px
    &__list
        display: inline-block