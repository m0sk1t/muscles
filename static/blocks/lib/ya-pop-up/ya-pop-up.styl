.ya-pop-up
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,.7)
    opacity: 0
    z-index: -1
    transition: all 0.2s ease-out
    &_active
        z-index: 100000
        opacity: 1
        & ^[0]__content
            transform: scale(1, 1)
    &__wrapper
        width: 100%
        height: 100%
    &__content
        width: 260px
        margin: 0 auto
        background: white
        border-radius: 5px
        padding: 20px 20px 40px 20px
        position: relative
        transform: scale(0, 0);
        transition: all 0.2s ease-out
    &__title
        text-align: center
        font-size: 18px
    &__close-btn
        display: block
        width: 20px
        height: 20px
        line-height: 20px
        background: mainLinksColor
        color: white
        text-decoration: none
        border-radius: 50%
        text-align: center
        position: absolute
        top: -10px
        right: -10px
        cursor: pointer
        font-size: 13px
        &:hover
            background: mainTextColor