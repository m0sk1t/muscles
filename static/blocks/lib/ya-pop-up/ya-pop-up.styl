.ya-pop-up
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(34,61,87,.7)
    opacity: 0
    z-index: -1
    transition: all 0.2s ease-out
    &_active
        z-index: 100000
        opacity: 1
        & ^[0]__content
            transform: scale(1, 1)
    &__wrapper
        width: 100%
        height: 100%
    &__content
        width: 90%
        height: 100%
        box-sizing: border-box
        margin: 0 auto
        background: #0e1e2d
        padding: 20px
        position: relative
        transform: scale(0, 0);
        transition: all 0.2s ease-out
    &__title
        text-align: center
        font-size: 18px
    &__close-btn
        display: block
        width: 20px
        height: 20px
        line-height: 20px
        //background: mainLinksColor
        color: white
        text-decoration: none
        //border-radius: 50%
        text-align: center
        position: absolute
        top: 10px
        right: 10px
        cursor: pointer
        font-size: 20px
        z-index: 100000
        &:hover
            background: mainTextColor
    &__main
    &__additional
        height: 100%
    &_small
        & ^[0]__content
            background: white
            width: 280px
            height: auto
            padding: 20px
            position: relative;
            top: 50%;
            transform: translateY(-50%);
    &_table
        & ^[0]__table
            display: table
            width: 100%
            height: 100%
        & ^[0]__cell
            display: table-cell
            vertical-align: middle
    &__main
        &.ya-span-3-4
            +below(959px)
                span(1/1)
    &__additional
        &.ya-span-1-4
            +below(959px)
                display: none